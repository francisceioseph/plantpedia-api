<div class="card mb-4">
  <div class="card-body">
    <h5 class="card-title">Plants</h5>
  </div>
</div>

<div class="card">
    <div class="card-body">
      <table class="table table-bordered">
        <thead>
          <tr class="text-center">
            <th scope="col">id</th>
            <th scope="col">Scientific name</th>
            <th scope="col">Common name</th>
            <th scope="col">Native status</th>
            <th scope="col"colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @plants.each do |plant| %>
            <tr>
              <td scope="row" class="text-center"><%= plant.id %></td>
              <td><%= link_to plant.scientific_name, plant_path(plant) %></td>
              <td><%= plant.common_name %></td>
              <td><%= plant.native_status %></td>
                <td class="text-center">
                  <%= link_to plant do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                </td>
                
                <% if can? :update, Plant %>
                  <td class="text-center">
                    <%= link_to edit_plant_path(plant) do %>
                      <i class="fas fa-pencil-alt"></i>
                    <% end %>
                  </td>
                <% end %>

                <% if can? :destroy, Plant %>
                  <td class="text-center">
                    <%= link_to plant, method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class="fas fa-trash-alt"></i>
                    <% end %>
                  </td>
                <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= will_paginate @plants, list_classes: %w(pagination justify-content-center), renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
</div>

<% if can? :create, User %>
  <div class="card mt-3">
    <footer class="card-footer">
      <%= link_to 'New Plant', new_plant_path, class: 'btn btn-link' %>
    </div>
  </div>
<% end %>

