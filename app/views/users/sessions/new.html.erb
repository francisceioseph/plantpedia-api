<div class="row justify-content-center">
  <div class="col-11 col-sm-11 col-md-8 col-lg-8 col-xl-7">
    <div class="card">
      <div class="card-header">
        <h2>
          <%= t :login %>
        </h2>
      </div>

      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label t(:email) %><br />
            <%= f.email_field :email, class:'form-control', autofocus: true, autocomplete: "email" %>
          </div>

          <div class="form-group">
            <%= f.label t(:password) %><br />
            <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, t(:remember_me), class: 'form-check-label' %>
            </div>
          <% end %>

          <%= f.submit t(:login), class: 'mt-3 btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-11 col-sm-11 col-md-8 col-lg-8 col-xl-7">
    <div class="mt-3">
      <p>
        <%= t :other_actions %>
      </p>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
