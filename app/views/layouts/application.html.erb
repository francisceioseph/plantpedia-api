<!DOCTYPE html>
<html>
  <head>
    <title>PlantpediaServer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <%= render partial: 'plants/nav_bar' %>
      <div class="mt-4 mb-4 mr-2 ml-2">
        <div class="row justify-content-center">
          <div class="col-11 col-sm-11 col-md-10 col-lg-10 col-xl-10">
            <% if notice %>
              <p  class="alert alert-primary" role="alert" id="notice"><%= notice %></p>
            <%end%>

            <% if alert %>
              <p  class="alert alert-warning" role="alert" id="alert"><%= alert %></p>
            <%end%>

            <%= yield %>
          </div>
        </div>
      </div>
  </body>
</html>
